	 */
	public void onClickCreate(View view) {
		//Intent intent = new Intent(this, NewActivity.class);
		//startActivity(intent);
	}
	
	public void onClickBack(View view) {
		Intent intent = new Intent(this, NewActivity.class);
		startActivity(intent);
	}
