package com.example.guesstag;

import android.app.AlertDialog;
import android.app.Dialog;
import android.content.DialogInterface;
import android.os.Bundle;
import android.support.v4.app.DialogFragment;
import android.support.v7.app.ActionBarActivity;
import android.text.Editable;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.EditText;

public class PopupFragment extends DialogFragment {
	
	/*public static PopupFragment newInstance(int title) {
		PopupFragment frag = new PopupFragment();
        Bundle args = new Bundle();
        args.putInt("title", title);
        frag.setArguments(args);
        return frag;
    }*/
	@Override
	public Dialog onCreateDialog(Bundle savedInstanceState) {
        

		final Dialog d = new Dialog(getActivity(),R.layout.activity_start);
		d.setContentView(R.layout.user_name_popup);
		d.show();
		
		EditText userName = (EditText)d.findViewById(R.id.choose_an_alias);
		String value;
		
		Button okButton = (Button)d.findViewById(R.id.button_ok);
		okButton.setOnClickListener(new View.OnClickListener());
		
		return d;
    }
	
	public void onClick(View v) {
	    value = userName.getText().toString();
	    SessionManager.getSessionManager().setUserName(userName.getText().toString());
	    d.dismiss();
}